<script>
function showSection(hash){
  const make = document.getElementById('howtomake');
  const use = document.getElementById('howtouse');
  if(hash === '#howtouse'){
    make.style.display = 'none';
    use.style.display = 'block';
  }else{
    make.style.display = 'block';
    use.style.display = 'none';
  }
}

// initial load
showSection(window.location.hash);

// handle hash change
window.addEventListener('hashchange', () => {
  showSection(window.location.hash);
});
</script>
